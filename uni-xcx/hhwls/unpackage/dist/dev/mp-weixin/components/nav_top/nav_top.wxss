.nav_top {
  width: 100vw;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 900;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  background-color: white;
}
.nav_top .topContent {
    width: 100vw;
    height: 100rpx;
    position: relative;
}
.nav_top .topContent .goBack {
      position: absolute;
      top: 0;
      left: 0;
      width: 15vw;
      height: 100rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
          -ms-flex-align: center;
              align-items: center;
      padding-left: 20rpx;
      -webkit-box-sizing: border-box;
              box-sizing: border-box;
      z-index: 9999;
}
.nav_top .topContent .goBack image {
        width: 40rpx;
        height: 42rpx;
}
.nav_top .topContent .nav_logo {
      position: absolute;
      top: 23rpx;
      left: 27rpx;
      width: 57rpx;
      height: 53rpx;
      padding-left: 20rpx;
}
.nav_top .topContent .nav_logo image {
        width: 40rpx;
        height: 42rpx;
}
.nav_top .topContent .title {
      text-align: center;
      width: 100%;
      height: 100%;
      line-height: 100rpx;
      font-size: 40rpx;
      font-family: '\81EA\5B9A\4E49\5B57\4F53';
}
.nav_top .topContent .decorate_box {
      height: 25rpx;
      overflow: hidden;
}

